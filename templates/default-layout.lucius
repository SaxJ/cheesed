.masthead {
    text-align: center;
    min-height: 500px;
}

.masthead h2 {
    font-size: 1.7em;
    font-weight: normal;
}

.masthead .btn {
    margin: 1em 0;
}

.masthead .container {
    padding-top: 40px;
}

a,a:hover {
    color: white;
    background-color: #217dbb;
    border-color: #2077b2;
    text-decoration: none;
    font-size: 19px;
    padding: 18px 27px;
    line-height: 1.3333333;
    border-radius: 6px;
    margin: 1em 0;
}
